<%= form_for(@reg_card) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.label :question %><br />
    <%= f.text_area :question %>
  </div>
  <div class="field">
    <%= f.label :answer %><br />
    <%= f.text_area :answer %>

    <%= f.hidden_field :group_id, value: group %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
